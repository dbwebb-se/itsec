<%- include('../partials/header') %>
<div class="main center">
    <h1><%= title %></h1>

    <div class="d-flex flex-row justify-content-center p-2">
        <div class="home">
            <h2 class="justify-content-center"><%= title1 %></h2>
            <div class="row text-center mr-0 ml-0">
                <% for (const category of categoriesFemale) { %>
                    <div class="mt-3 mb-3 col-md-4">
                        <a class="btn btn-block btn-light-blue"
                        href="category/<%= category.categoryID %>"><%= category.categoryName; %></a>
                    </div>
                <% }; %>
            </div>
            <h2><%= title2 %></h2>
            <div class="row text-center mr-0 ml-0">
                <% for (const category of categoriesMale) { %>
                    <div class="mt-3 mb-3 col-md-4">
                        <a class="btn btn-block btn-light-blue"
                        href="category/<%= category.categoryID %>"><%= category.categoryName; %></a>
                    </div>
                <% }; %>
            </div>
        </div>
    </div>
    
</div>
<%- include('../partials/footer') %>
